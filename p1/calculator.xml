<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANI CALCULATOR"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="60dp"
        android:text="0"
        android:id="@+id/result"
        android:gravity="right"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:background="#808080"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/seven"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="7"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/eight"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="8"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/nine"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="9"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/plus"
            android:textColor="@color/white"
            android:text="+"
            android:textSize="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/four"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="4"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/five"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="5"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/six"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="6"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/minus"
            android:textColor="@color/white"
            android:text="-"
            android:textSize="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/one"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="1"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/two"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="2"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/three"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="3"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/multiply"
            android:textColor="@color/white"
            android:text="*"
            android:textSize="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/zero"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="0"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/point"
            android:textColor="@color/black"
            android:backgroundTint="#EDDBC0"
            android:text="."
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/equal"
            android:textColor="@color/black"
            android:backgroundTint="#749F82"
            android:text="="
            android:textSize="40dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/divide"
            android:textColor="@color/white"
            android:text="/"
            android:textSize="40dp"
            />

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:gravity="center"
        android:text="CLEAR"
        android:backgroundTint="#DD5353"
        android:id="@+id/clear"/>

</LinearLayout>
